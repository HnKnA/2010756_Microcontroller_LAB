#include "mode2.h"


int default_time = 7;

int on_changed = 0;

void mode2(){
if(default_time >= 0){
	HAL_GPIO_TogglePin(LED_RED_X_GPIO_Port, LED_RED_X_Pin);
	HAL_GPIO_TogglePin(LED_RED_Y_GPIO_Port, LED_RED_Y_Pin);
	default_time -= 1;
}
	if(button3_flag == 1){
		on_changed = 0;
		red_time_global = mode_red_time;
		button3_flag = 0;
	}
	if(button2_flag == 1){
		button2_flag = 0;
		on_changed = 1;
		if(on_changed){
		mode_red_time++;
		}
	}
}
