#include <math.h>
#include "mode2.h"
#include "software_timer.h"
#include "main.h"
#include "mode1.h"
#include "global.h"
#include "button.h"

double mode_red_time = red_time_global[0];

int half_asecond = 50;
int on_changed = 0;

void mode2(){
	half_asecond--;
	if(half_asecond == 0){
		half_asecond = 50;
		HAL_GPIO_TogglePin(LED_RED_X_GPIO_Port, LED_RED_X_Pin);
		HAL_GPIO_TogglePin(LED_RED_Y_GPIO_Port, LED_RED_Y_Pin);
	}
	if(mode_red_time >= 0){
		HAL_GPIO_WritePin(LED_YELLOW_X_GPIO_Port, LED_YELLOW_X_Pin, RESET);
		HAL_GPIO_WritePin(LED_YELLOW_Y_GPIO_Port, LED_YELLOW_Y_Pin, RESET);
		HAL_GPIO_WritePin(LED_GREEN_X_GPIO_Port, LED_GREEN_X_Pin, RESET);
		HAL_GPIO_WritePin(LED_GREEN_Y_GPIO_Port, LED_GREEN_Y_Pin, RESET);
	}
	if(button3_flag == 1){
		on_changed = 0;
		red_time_global[0] = mode_red_time;
		red_time_global[1] = mode_red_time;
		button3_flag = 0;
	}
	if(button2_flag == 1){
		button2_flag = 0;
		on_changed = 1;
		if(on_changed){
		mode_red_time++;
		}
	}
}
